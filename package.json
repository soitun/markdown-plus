{
  "name": "markdown-plus",
  "version": "3.0.0-alpha.1",
  "private": true,
  "description": "Markdown editor with extra features",
  "keywords": [
    "markdown",
    "editor",
    "markdown plus",
    "mdp"
  ],
  "homepage": "https://github.com/tylerlong/markdown-plus/",
  "bugs": {
    "url": "https://github.com/tylerlong/markdown-plus/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tylerlong/markdown-plus.git"
  },
  "license": "MIT",
  "author": "Tyler Liu",
  "type": "module",
  "scripts": {
    "lint": "tsc --jsx react --skipLibCheck --noEmit && eslint . --fix && prettier --write . && sort-package-json",
    "release": "rm -rf .parcel-cache && rm -rf docs && parcel build src/index.html --dist-dir docs --public-url ./ --no-source-maps --no-scope-hoist",
    "serve": "rm -rf .parcel-cache && rm -rf temp && parcel src/index.html --dist-dir temp"
  },
  "devDependencies": {
    "@codemirror/commands": "^6.7.0",
    "@codemirror/lang-markdown": "^6.3.0",
    "@codemirror/language": "^6.10.3",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.34.1",
    "@fortawesome/fontawesome-free": "^6.6.0",
    "@parcel/transformer-typescript-tsc": "^2.12.0",
    "@types/node": "^22.7.7",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@uiw/codemirror-theme-github": "^4.23.5",
    "antd": "^5.21.4",
    "chart.js": "2.6.0",
    "debounce": "^2.2.0",
    "eslint-config-tyler": "^0.1.7",
    "github-markdown-css": "^5.7.0",
    "globals": "^15.11.0",
    "katex": "^0.16.11",
    "localforage": "^1.10.0",
    "manate": "^0.9.8",
    "markdown-extensible": "^0.2.1",
    "parcel": "^2.12.0",
    "parcel-namer-hashless": "^1.0.6",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "punycode": "^2.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sort-package-json": "^2.10.1",
    "split-grid": "^1.0.11",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "wait-for-async": "^0.7.0",
    "yarn-upgrade-all": "^0.7.4"
  },
  "@parcel/runtime-js": {
    "splitManifestThreshold": 100000000
  },
  "parcel-namer-hashless": {},
  "yarn-upgrade-all": {
    "ignore": [
      "chart.js"
    ]
  }
}
